    <groupId>usdot.jpo.ode</groupId>
    <artifactId>jpo-deduplicator</artifactId>
    <version>2.0.0</version>
    <packaging>jar</packaging>
    <name>jpo-deduplicator</name>
    <url>http://maven.apache.org</url>
    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <geotools.version>29-SNAPSHOT</geotools.version>
        <sonar.organization>usdot-jpo-ode</sonar.organization>
        <sonar.host.url>https://sonarcloud.io</sonar.host.url>
        <!-- <maven.deploy.skip>true</maven.deploy.skip> -->
        <description>Deduplicates Messages generated by Subcomponents of the ODE</description>
        <java.version>21</java.version>
        <!-- Resource delimeter for build properties in application.yaml -->
        <resource.delimeter>^</resource.delimeter>

        <!-- Jacoco/Sonar properties -->
        <jacoco.version>0.8.11</jacoco.version>
        <sonar.java.coveragePlugin>jacoco</sonar.java.coveragePlugin>
        <sonar.dynamicAnalysis>reuseReports</sonar.dynamicAnalysis>
        <sonar.coverage.jacoco.xmReportPaths>${project.basedir}/target/site/jacoco/jacoco.xml</sonar.coverage.jacoco.xmReportPaths>
        <sonar.language>java</sonar.language>
    </properties>
    <dependencies>
